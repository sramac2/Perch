<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SignInActivity">

    <EditText
        android:id="@+id/EmailTextbox"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="   Email"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PerchTextview" />

    <EditText
        android:id="@+id/PwdTextbox"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="   Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailTextbox" />

    <CheckBox
        android:id="@+id/KeepSignedCheckBox"
        android:layout_width="160dp"
        android:layout_height="27dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="8dp"
        android:text="Keep me signed in"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PwdTextbox" />

    <Button
        android:id="@+id/FbButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/fblogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginButton" />

    <TextView
        android:id="@+id/PerchTextview"
        android:layout_width="182dp"
        android:layout_height="58dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:text="@string/Perchtextview"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KeepSignedCheckBox" />

    <Button
        android:id="@+id/GoogleButton"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorAccent"
        android:text="Log in with Google"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/FbButton" />

</android.support.constraint.ConstraintLayout>